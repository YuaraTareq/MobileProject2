<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MobileProject" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.MobileProject" parent="Base.Theme.MobileProject" />


    <!-- headlines text style -->
    <style name="HeadlineTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center </item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- headlines text style -->
    <style name="BrowseTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center </item>
        <item name="android:layout_width">155dp</item>
        <item name="android:layout_height">80dp</item>
    </style>


    <!-- normal text Style -->
    <style name="NormalTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">textStart</item>

    </style>


    <style name="BackButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawableLeft">@drawable/back_arrow</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <!-- main button style -->
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item> <!-- White -->
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center </item>

    </style>

    <!-- filtering dialog style -->
    <style name="MyDialogStyle" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:background">@color/white</item>
    </style>


    <!-- Custom Spinner Style -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownVerticalOffset">48dp</item>
    </style>


    <!-- range slider style -->
    <style name="CustomRangeSlider" parent="Widget.MaterialComponents.Slider">
        <item name="thumbColor">@color/blue2</item>
        <item name="haloColor">@color/blue2</item>
        <item name="thumbStrokeColor">@color/blue2</item>
        <item name="trackColorActive">@color/blue2</item>
        <item name="trackColorInactive">@color/blue2</item>
        <item name="thumbStrokeWidth">2dp</item>
        <item name="android:valueFrom">0</item>
        <item name="android:valueTo">10000</item>
        <item name="android:stepSize">1000</item>
    </style>

    <!-- headlines text style -->
    <style name="HeadlineTextStyleFilters" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center </item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>

    </style>

</resources>